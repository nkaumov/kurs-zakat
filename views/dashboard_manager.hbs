<h4>Кабинет менеджера</h4>

<!-- Блок кнопок (ссылок) для быстрого перехода -->
<div>
  <a href="/manager/requests" class="btn">Посмотреть заявки</a>
  <a href="/manager/employees" class="btn">Персонал</a>
  <a href="/manager/report/hours" class="btn">Отчёт по часам</a>
  <a href="/manager/report/requests" class="btn">Отчёт по поставкам</a>
  <a href="/manager/schedule" class="btn">График</a>
  <a href="/manager/create-user" class="btn">Создать пользователя</a>
</div>
<br/>

{{!-- Если передали requests, показываем таблицу заявок --}}
{{#if requests}}
  <h5>Список заявок (для менеджера)</h5>
  <table class="striped">
    <thead>
  <tr>
    <th>Номер</th>
    <th>Дата</th>
    <th>Статус</th>
    <th>Изменить статус</th>
    <th>Состав</th> 
  </tr>
</thead>
<tbody>
  {{#each requests}}
  <tr>
    <td>{{request_number}}</td>
    <td>{{created_at}}</td>
    <td>{{status}}</td>
    <td>
      <form action="/manager/update-status" method="POST" style="margin:0; padding:0;">
        <input type="hidden" name="request_id" value="{{request_id}}" />
        <select name="new_status">
          <option value="created"   {{#if (eq status "created")}}selected{{/if}}>Создана</option>
          <option value="accepted"  {{#if (eq status "accepted")}}selected{{/if}}>Принята</option>
          <option value="declined"  {{#if (eq status "declined")}}selected{{/if}}>Отклонена</option>
          <option value="completed" {{#if (eq status "completed")}}selected{{/if}}>Завершена</option>
        </select>
        <button class="btn">OK</button>
      </form>
    </td>
    <td>
      <a href="/manager/requests/{{request_id}}" class="btn-small">Открыть</a>
    </td>
  </tr>
  {{/each}}
</tbody>

  </table>
{{/if}}

{{!-- Если передали список сотрудников --}}
{{#if employeesList}}
  <h5>Список сотрудников</h5>
  <table class="striped">
    <thead>
      <tr>
        <th>ID</th>
        <th>ФИО</th>
        <th>Должность</th>
        <th>Паспорт</th>
        <th>Телефон</th>
      </tr>
    </thead>
    <tbody>
      {{#each employeesList}}
      <tr>
        <td>{{employee_id}}</td>
        <td>{{full_name}}</td>
        <td>{{position}}</td>
        <td>{{passport_data}}</td>
        <td>{{phone_number}}</td>
      </tr>
      {{/each}}
    </tbody>
  </table>

  <h5>Добавить сотрудника</h5>
  <form action="/manager/employees/add" method="POST">
    <div class="input-field">
      <input type="text" name="full_name" placeholder="ФИО" required/>
    </div>
    <div class="input-field">
      <input type="text" name="position" placeholder="Должность" required/>
    </div>
    <div class="input-field">
      <input type="text" name="passport_data" placeholder="Паспортные данные"/>
    </div>
    <div class="input-field">
      <input type="text" name="phone_number" placeholder="Телефон"/>
    </div>
    <button class="btn">Добавить</button>
  </form>
{{/if}}
